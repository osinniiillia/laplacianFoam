FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 2;

boundaryField
{
    left
    {
        type            fixedValue;
        value           uniform -4;
    }

    right
    {
        type            fixedValue;
        value           uniform 3;
    }

    emptyWall
    {
        type            empty;
    }

}

